<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallingActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/profile_image"
        android:scaleType="centerCrop"
        android:id="@+id/iv"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="User Name"
        android:textColor="#13DC56"
        android:textSize="20sp"
        android:layout_above="@+id/tvCalling"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:id="@+id/tvUSername"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Calling"
        android:id="@+id/tvCalling"
        android:textSize="14sp"
        android:layout_above="@+id/ivCancelCall"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"
        />


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/cancel_call"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="25dp"
        android:id="@+id/ivCancelCall"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/make_call"
        android:layout_alignParentBottom="true"
        android:id="@+id/ivAcceptCall"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="25dp"
        android:visibility="gone"
        android:layout_alignParentEnd="true"/>



</RelativeLayout>